# Application settings
APP_NAME="LARP Admin API"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Database (Supabase PostgreSQL via pooler)
DATABASE_URL=postgresql+asyncpg://postgres.your-project:your-password@aws-0-region.pooler.supabase.com:6543/postgres
DATABASE_ECHO=false

# CORS - comma-separated origins
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# LLM Timeout (seconds)
LLM_TIMEOUT=120.0
LLM_LONG_TIMEOUT=180.0

# Frontend (Supabase client - used during build)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
